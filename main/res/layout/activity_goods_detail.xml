<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<TextView
    android:id="@+id/detail_content"
    app:layout_constraintTop_toBottomOf="@+id/detail_toobal"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detail_toobal"
        app:title="商品详情"
        android:background="@color/yellew"
        app:titleTextColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">

        <TextView
            android:id="@+id/detail_favorite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/black"
           />

        <TextView
            android:id="@+id/detail_buy_now"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/detail_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="710dp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>